							img(src="/public/icons/cupon.svg", alt="Mis Cupones")
							h2 Mis Cupones
						hr.col-12.fake-hr
						.title.col-12.col-md-8.small-margin.can-close-object(data-target="tarjeta")
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g><path d="M7.41 7.84L12 12.42l4.59-4.58L18 9.25l-6 6-6-6z"></path></g></svg>
							img(src="/public/icons/tarjeta.svg", alt="Mi Tarjeta")
							h2 Mi Tarjeta
						hr.col-12.fake-hr
						.title.col-12.col-md-8.small-margin.can-close-object(data-target="regalos")
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g><path d="M7.41 7.84L12 12.42l4.59-4.58L18 9.25l-6 6-6-6z"></path></g></svg>
							img(src="/public/icons/regalos.svg", alt="Mis Regalos")
							h2 Mis Regalos
	include ../footer.pug

