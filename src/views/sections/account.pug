										input.form-control(type="date", id="birthday", name="birthday", required)
								.form-group
									label(for="gender") Género
									input.form-control(type="text", id="gender", name="gender", value="Masculino", required)
							.form-row.col-12
								.form-group
									label(for="email") Correo
									input.form-control(type="email", id="email", name="email", value="hola@rodrigogarcia.com.mx", required)
								.form-group
									label(for="tel") Teléfono
									input.form-control(type="tel", id="tel", name="tel", value="hola@rodrigogarcia.com.mx", required)
							.form-group.col-12
								label(for="description") Descripción
								input.form-control(type="text", id="description", name="description", value="descripción")
							.form-buttons-holder
								button(type="submit", class="btn login") Actualizar
						hr.col-12.fake-hr
						.title.col-12.col-md-8.small-margin.can-close-object.open(data-target="changePassword")
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g><path d="M7.41 7.84L12 12.42l4.59-4.58L18 9.25l-6 6-6-6z"></path></g></svg>
							img(src="/public/icons/ajustes.svg", alt="Contraseña")
							h2 Cambiar Contraseña
						form.intel.col-12.col-md-8.data-asegurados.form-to-hide.open.can-close#changePassword
							.form-group.col-12
								label(for="oldPassword") Contraseña Actual
								input.form-control(type="password", id="oldPassword", name="oldPassword", required)
							.form-row.col-12
								.form-group
									label(for="password") Nueva Contraseña
									input.form-control(type="password", id="password", name="password", required)
								.form-group
									label(for="confirmPassword") Confirmar Contraseña
									input.form-control(type="password", id="confirmPassword", name="confirmPassword", required)
							.form-buttons-holder
								button(type="submit", class="btn login") Actualizar
						hr.col-12.fake-hr
