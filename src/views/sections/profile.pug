extends ../layout.pug

block content
	include ../nav.pug
	+menu(false, true)
	section.with-footer.profile-section.container-fluid
		.row
			+menu-profile(true, false, false)
			article.col-12.col-md-6.col-lg-9.col-xl-9.user-data-intel
				.container
					.row.justify-content-center
						.title.col-12.col-md-12.col-lg-8
							img(src="/public/icons/profile-info.svg", alt="Información")
							h2 Información de mi Plan Actual
						form.intel.col-12.col-md-12.col-lg-8.data-asegurados
							.form-group.col-12
								label(for="name") Nombre
								input.form-control(type="name", id="name", name="name", value="Rodrigo García", disabled)
							.form-row.col-12
								.form-group
									label(for="poliza") Póliza Actual
									input.form-control(type="poliza", id="poliza", name="poliza", value="UVK908567", disabled)
								.form-group
									label(for="plan") Plan
									input.form-control(type="plan", id="plan", name="plan", value="Euroschengen", disabled)
							.form-row.col-12
								.form-group
									label(for="tel") Teléfono
									input.form-control(type="tel", id="tel", name="tel", value="5582457813", disabled)
								.form-group
									label(for="gender") Sexo
									input.form-control(type="gender", id="gender", name="gender", value="Masculino", disabled)
							//- .form-buttons-holder
							//- 	button(type="submit", class="btn login") Actualizar
						hr.col-12.col-md-12.col-lg-8
						.pdf.col-12.col-md-12.col-lg-8
							a(href="/download/pdf")
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g><path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"></path></g></svg>
								span Descargar PDF Euroschengen
						.sos-btn.col-12.col-md-12.col-lg-8
							a.triggers-sos(href="#sos")
								img(src="/public/icons/sos.svg", alt="S.O.S. Alerta")
								span S.O.S.
						.emergency-share.col-12.col-md-12.col-lg-8
							p Puedes compartir la información de tu seguro con algún familiar o amigo para que en caso de que tengas una emergencia y no puedas responder, esa persona pueda responder por ti.
						.myassist-btn.col-12.col-md-12.col-lg-8
							a(href="https://d1vm92ue9k6pkk.cloudfront.net/mx/272/pre")
								<svg xmlns="http://www.w3.org/2000/svg" width="2048" height="1792" viewBox="0 0 2048 1792"><g><path d="M480 1088q0-66-47-113t-113-47-113 47-47 113 47 113 113 47 113-47 47-113zm36-320h1016l-89-357q-2-8-14-17.5t-21-9.5H640q-9 0-21 9.5T605 411zm1372 320q0-66-47-113t-113-47-113 47-47 113 47 113 113 47 113-47 47-113zm160-96v384q0 14-9 23t-23 9h-96v128q0 80-56 136t-136 56-136-56-56-136v-128H512v128q0 80-56 136t-136 56-136-56-56-136v-128H32q-14 0-23-9t-9-23V992q0-93 65.5-158.5T224 768h28l105-419q23-94 104-157.5T640 128h768q98 0 179 63.5T1691 349l105 419h28q93 0 158.5 65.5T2048 992z"></path></g></svg>
